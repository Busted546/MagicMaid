<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
   android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context=".about_us">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:padding="8dp"
        android:textColor="@color/grey1"
        android:textSize="45sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Contact Us" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:textColor="@color/grey1"
            android:src="@drawable/ic_group_black_24dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="209dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="50dp"

            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:text="Satvik Paderiya and Ankur Rawat" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:textColor="@color/grey1"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_email_black_24dp"
            android:layout_marginLeft="30dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="209dp"
            android:layout_height="50dp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:text="Email us: satvikpaderiya@gmail.com"
             />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:textColor="@color/grey1"
            android:src="@drawable/ic_phone_black_24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="209dp"
            android:layout_height="50dp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:text="Call us: 9632147538, 0755-485269" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:textColor="@color/grey1"
            android:src="@drawable/ic_location_on_black_24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="209dp"
            android:layout_height="50dp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:text="Location: Bhopal, Madhya Pradesh, India" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:textColor="@color/grey1"
            android:src="@drawable/ic_access_time_black_24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="209dp"
            android:layout_height="50dp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:text="Timing: 11:00-20:00 IST (Sundays closed)" />


    </LinearLayout>






</androidx.appcompat.widget.LinearLayoutCompat>